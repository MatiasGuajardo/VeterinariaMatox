<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Ingresar nuevo perro</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Ingrese el nombre del dueño" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Una historia breve del caso del animal"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Ingrese nombre del perro" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="pet" class="form-control" placeholder="Ingrese raza del perro" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="tamano" class="form-control" placeholder="Tamaño del perro (Pequeño, Mediano o Grande)" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>